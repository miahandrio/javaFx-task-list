<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxtasklist.HelloController">
    <GridPane alignment="center" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">

<!--        <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>-->

        <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" maxWidth="Infinity" minWidth="100.0" prefWidth="200.0" />
         <ColumnConstraints maxWidth="80.0" minWidth="80.0" prefWidth="80.0" />
        </columnConstraints>

        <rowConstraints>
         <RowConstraints />
         <RowConstraints />
         <RowConstraints minHeight="40.0" />
         <RowConstraints minHeight="40.0" />
        </rowConstraints>


        <Label text="Task organizer" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.rowSpan="1" GridPane.valignment="TOP">
            <font>
                <Font name="Arial" size="24" />
            </font>

            <GridPane.margin>
                <Insets bottom="20" top="20" />
            </GridPane.margin>
        </Label>

        <TextField fx:id="textField" prefHeight="40" prefWidth="160" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2">
        </TextField>



        <Button onAction="#onAddButtonClick" prefHeight="40" prefWidth="80" text="Add" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="2">
        </Button>


      <ListView fx:id="listView" onContextMenuRequested="#onTextFieldClick" prefWidth="201.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">
          <
      </ListView>
      <ScrollBar orientation="VERTICAL" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

      <MenuBar GridPane.columnSpan="3">
        <menus>

          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Close" onAction="#exit"/>
            </items>
          </Menu>

<!--          <Menu mnemonicParsing="false" text="Edit">-->
<!--            <items>-->
<!--              <MenuItem mnemonicParsing="false" text="Delete" />-->
<!--            </items>-->
<!--          </Menu>-->

          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>

        </menus>
      </MenuBar>

    </GridPane>
</VBox>
